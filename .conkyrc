background no
out_to_console yes
out_to_x no
update_interval 2
total_run_times 0
short_units yes
pad_percents 3
override_utf8_locale yes
mpd_host localhost
mpd_port 6600

TEXT
,[
{"full_text": " ≣ [$membar] ", "color":"\#B58900"},
${if_up wlan0}{"full_text": " ≈ ${wireless_essid wlan0} [${wireless_link_qual_perc wlan0}%] ","color":"\#33CC99"},
$else${if_up ppp0}{"full_text": " ≈ orange ","color":"\#33CC99"},
$else${if_up eth0}{"full_text": " ≈ eth0 ","color":"\#33CC99"},
$else${if_up enp2s1}{"full_text": " ≈ eth0 ","color":"\#33CC99"},
$else{"full_text": " ≈ no connection ","color":"\#33CC99"},$endif$endif$endif$endif
{"full_text": " ${time %a %d %b} ${time %H:%M} "}
]
